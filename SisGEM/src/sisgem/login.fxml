<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import java.net.*?>
<?scenebuilder-stylesheet styles.css?>

<BorderPane maxHeight="+Infinity" maxWidth="+Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
	prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="oompa.sisgemplus.controllers.LoginController">
	<center>
		<GridPane BorderPane.alignment="CENTER">
			<columnConstraints>
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
				<ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
					prefWidth="100.0" />
			</columnConstraints>
			<rowConstraints>
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" percentHeight="10.0"
					prefHeight="30.0" vgrow="SOMETIMES" />
				<RowConstraints minHeight="10.0" prefHeight="30.0"
					vgrow="SOMETIMES" />
			</rowConstraints>
			<children>
				<Label fx:id="label_login" text="Login" GridPane.valignment="BOTTOM">
					<GridPane.margin>
						<Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
					</GridPane.margin>
				</Label>
				<Label fx:id="label_password" text="Senha"
					GridPane.columnIndex="1" GridPane.valignment="BOTTOM">
					<GridPane.margin>
						<Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
					</GridPane.margin>
				</Label>
				<TextField fx:id="textfield_login" maxWidth="1.7976931348623157E308"
					prefHeight="35.0" prefWidth="224.0" GridPane.rowIndex="1">
					<GridPane.margin>
						<Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
					</GridPane.margin>
				</TextField>
				<PasswordField fx:id="passwordfield_password"
					maxWidth="1.7976931348623157E308" onKeyPressed="#enterPressed"
					prefHeight="35.0" prefWidth="224.0" GridPane.columnIndex="1"
					GridPane.rowIndex="1">
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<GridPane.margin>
						<Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
					</GridPane.margin>
				</PasswordField>
				<Button fx:id="button_signin" mnemonicParsing="false"
					onAction="#validateUser" onKeyPressed="#enterPressed" prefHeight="25.0"
					prefWidth="182.0" text="Entrar" GridPane.columnIndex="1"
					GridPane.halignment="RIGHT" GridPane.rowIndex="2"
					GridPane.valignment="TOP">
					<GridPane.margin>
						<Insets left="15.0" right="15.0" top="20.0" />
					</GridPane.margin>
			        <styleClass>
			        	<String fx:value="elevenPx" />
			        	<String fx:value="bold" />
			        </styleClass>
				</Button>
			</children>
		</GridPane>
	</center>
	<stylesheets>
		<URL value="@styles.css" />
	</stylesheets>
	<bottom>
		<Label fx:id="label_statusbar" visible="false"
			BorderPane.alignment="CENTER" />
	</bottom>
</BorderPane>
